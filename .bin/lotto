#!/usr/bin/perl

use strict;
use warnings;

use List::Util qw[shuffle max];

my $numSets = 1;
my $numInSet = 6;

my $lower = 1;
my $upper = 49;

my $rand;

my $i;
my $j;

my @choice;
my @possible;

$numSets = max(1, 0 + $ARGV[0]) if (scalar @ARGV);

for ($i = 0; $i < $numSets; $i++) {
	@possible = $lower .. $upper;

	for ($j = 0; $j < $numInSet; $j++) {
		@possible = shuffle(@possible);
		print shift(@possible), '  ';
	}

	print "\n";
}
